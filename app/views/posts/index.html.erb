<ul>
  <% @posts.each do |post| %>
    <li>
      <p>date:<%= post.created_at.strftime("%Y-%m-%d") %></p>
      <p>post:<%= post.message.gsub(/\n/, '<br>').html_safe %></p>
      <%= link_to 'Edit', edit_post_path(post) %>
    </li>
  <% end %>
</ul>

<%= link_to new_post_path do %>
  New post
<% end %>
