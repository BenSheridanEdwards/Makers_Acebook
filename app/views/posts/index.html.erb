<ul>
  <% @posts.each do |post| %>
    <li>
      <%= find_user(post.user_id).name.capitalize %>
      <% post.created_at %><%= post.created_at.strftime("%Y-%m-%d") %>
      <p>post:<%= post.message.gsub(/\n/, '<br>').html_safe %></p>
      <% if @current_user.id == post.user_id %>
      <%= button_to 'Edit', edit_post_path(post) %><%= button_to 'Destroy', posts_path(post),method: :delete %>
    </li>
    <% end %>
  <% end %>
</ul>

<%= link_to new_post_path do %>
  New post
<% end %>
