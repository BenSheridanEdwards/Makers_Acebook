$("#<%= @post.id %>_partial").html("<%= j render partial: 'posts/comment.html', locals: { post: @post }, collection: @post.comments.order("created_at DESC") %>");
$("#<%= @post.id %>_comment_form").html("<%= j render partial: 'comments/form.html', locals: { post: @post, comment: @post.comments.build } %>");
